#!/usr/bin/env node

let esbuild = require("esbuild");
let buildOptions = require("./build");

esbuild.serve({
  servedir: "example"
}, {
  ...buildOptions,
  minify: false,
  entryPoints: ["example/example.ts"],
  outfile: "example/example.js",
}).then(result => {
  console.log(`http://localhost:${result.port}`);
});
